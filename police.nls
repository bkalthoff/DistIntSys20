
police-own [
  next-task
  person-to-search
  search-tick
  someoneAskedForHelp
  turtleToFollow
]

to setup-police
  
  create-police 3
  [
    set shape  "person police"
    set color blue
    set search-tick 0
    set size 2
    set turtleToFollow 0
    setxy random-xcor random abs 11
    set next-task [ -> move-police ]
  ]
  
end

to idle
  run next-task
end

to move-police
    ifelse abs xcor > 15 or ycor <= -10 or ycor > 14 [
      set heading towards patch 0 0
    ]
    [
      right random 45
      left random 45
    ]
    forward 0.5
  
    set next-task [ -> lookForNewTurtleToFollow ]

