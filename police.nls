to lookForNewTurtleToFollow
  if turtleToFollow = 0[
    set turtleToFollow min-one-of adults with [stoppedByPolice = false] in-radius 100 [distance myself]
  ]
  ifelse turtleToFollow = NOBODY[
    set turtleToFollow 0
    set next-task [ -> move-police ]
  ][
    set next-task [ -> chaseTurtle ]
  ]
end

to chaseTurtle
  if turtleToFollow != 0[
    face turtleToFollow
    forward 0.5
    set next-task [ -> stopFollowingIfStopped ]
  ]
end

to stopFollowingIfStopped
  if turtleToFollow != 0[
    ask turtleToFollow[
      ifelse stoppedByPolice = true[
        set turtleToFollow 0
        set next-task [ -> move-police ]
      ][
        set next-task [ -> chaseTurtle ]
      ]
    ]
  ]
end

